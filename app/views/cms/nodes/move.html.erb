<%= form_for :item, url: { action: :move_confirm }, html: { id: "item-form", method: :put, multipart: true, autocomplete: :off } do |f| %>
  <%= error_messages_for :item %>

  <section class="main-box">
    <header><h2><%= t("cms.move_node.title") %></h2></header>

    <div class="main-body">
      <dl class="see">
        <dt><%= t("cms.move_node.current_filename") %></dt>
        <dd class="current-filename"><%= @filename %></dd>
        <dl class="see mod-cms-page-search">
          <dt><%= @model.t :destination_filename %><%= @model.tt :destination_filename %></dt>
          <dd>
            <%= hidden_field_tag :destination_folder, nil, id: nil, class: "hidden-ids" %>
            <%= link_to t("cms.apis.nodes.index"), cms_apis_nodes_path, class: "btn ajax-box" %>
          </dd>
          <dd>
            <table class="index ajax-selected">
              <thead>
              <tr>
                <th class="name"><%= @model.t :destination_filename %></th>
                <th></th>
              </tr>
              </thead>
              <tbody>
              </tbody>
            </table>
          </dd>
        </dl>
        <dt><%= t("cms.move_node.destination_filename") %><%= @model.tt :destination_filename %></dt>
        <dd>
          <%= text_field_tag :destination, "", value: @item.filename, class: :filename %>
          <%= hidden_field_tag :filename, "", value: @filename %>
          <%= hidden_field_tag :source, "", value: @source %>
        </dd>
      </dl>
    </div>
  </section>

  <footer class="send">
    <%= f.submit t("ss.buttons.move"), class: "btn-primary", name: :confirm %>
    <%= f.button t("ss.buttons.cancel"), type: :reset, onclick: "location.href='#{url_for(action: :show)}'; return false;", class: "btn-default" %>
  </footer>

<% end %>
