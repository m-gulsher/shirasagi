<dl class="see sys-site-copy-show">
  <dt><%= @site.t :name %></dt>
  <dd><%= @site.send :name %></dd>

  <dt><%= @site.t :host %></dt>
  <dd><%= @site.send :host %></dd>

  <dt><%= @site.t :domains %></dt>
  <dd><%= @site.send :domains %></dd>

  <dt><%= @site.t :subdir %></dt>
  <dd><%= @site.send :subdir %></dd>

  <dt><%= @site.t :parent_id %></dt>
  <dd><%= @site.parent.try(:name) %></dd>

  <dt><%= @site.t :https %></dt>
  <dd><%= @site.label :https %></dd>

  <dt><%= @site.t :mypage_scheme %></dt>
  <dd><%= @site.label :mypage_scheme %></dd>

  <dt><%= @site.t :mypage_domain %></dt>
  <dd><%= @site.send :mypage_domain %></dd>

  <dt><%= @site.t :group_ids %></dt>
  <dd><%=br @site.groups.order_by(name: 1).pluck(:name) %></dd>

  <dt><%= @site.t :partner_site_ids %></dt>
  <dd><%=br @site.partner_sites.reorder(id: 1).pluck(:name) %></dd>

  <dt><%= @site.t :chorg_site_ids %></dt>
  <dd><%=br @site.chorg_sites.reorder(id: 1).pluck(:name) %></dd>

  <% if SS.config.ss.upload_policy.present? %>
  <dt><%= @site.t :upload_policy %></dt>
  <dd><%= @site.label :upload_policy %></dd>
  <% end %>

  <dt><%= @model.t :copy_contents %></dt>
  <dd>
    <% if @item.copy_contents.include?('pages') %>
      <%= t("sys.options.copy_contents.pages") %><br />
      <%= hidden_field_tag "item[copy_contents][]", "pages", id: nil %>
    <% end %>
    <% if @item.copy_contents.include?('files') %>
      <%= t("sys.options.copy_contents.files") %><br />
      <%= hidden_field_tag "item[copy_contents][]", "files", id: nil %>
    <% end %>
    <% if @item.copy_contents.include?('editor_templates') %>
      <%= t("sys.options.copy_contents.editor_templates") %><br />
      <%= hidden_field_tag "item[copy_contents][]", "editor_templates", id: nil %>
    <% end %>
    <% if @item.copy_contents.include?('dictionaries') %>
      <%= t("sys.options.copy_contents.dictionaries") %><br />
      <%= hidden_field_tag "item[copy_contents][]", "dictionaries", id: nil %>
    <% end %>
  </dd>
</dl>
